<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.pc.nightreader.ui.fragment.CareFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:visibility="gone"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/myCollection"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/myCollectionImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_my_collection"
                    />
                <TextView
                    android:textColor="#0a0909"
                    android:layout_marginLeft="10dp"
                    android:text="我的收藏"
                    android:id="@+id/myCollectionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

           <RelativeLayout
               android:visibility="gone"
             android:background="#bebcbc"
             android:layout_width="match_parent"
             android:layout_height="1dp">
           </RelativeLayout>


            <LinearLayout
                android:padding="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/lightChange"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/modeChangeImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_night_mode"
                    />
                <TextView
                    android:textColor="#0a0909"
                    android:layout_marginLeft="10dp"
                    android:text="屏幕亮度"
                    android:id="@+id/modeChangeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

           <RelativeLayout
               android:background="#bebcbc"
               android:layout_width="match_parent"
               android:layout_height="1dp">
             </RelativeLayout>

           <LinearLayout
               android:padding="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/CacheDelete"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/CacheDeleteImg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/user_my_cache"
                    />
                <TextView
                    android:textColor="#0a0909"
                    android:layout_marginLeft="10dp"
                    android:text="清除缓存"
                    android:id="@+id/CacheDeleteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="#0a0909"
                       android:text="10M"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:id="@+id/cacheSize"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </RelativeLayout>

            </LinearLayout>

           <RelativeLayout
               android:background="#bebcbc"
               android:layout_width="match_parent"
               android:layout_height="1dp">
           </RelativeLayout>


           <LinearLayout
               android:padding="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/advice"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/adviceImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_my_feedback"
                    />
                <TextView
                    android:textColor="#0a0909"
                    android:layout_marginLeft="10dp"
                    android:text="意见反馈"
                    android:id="@+id/adviceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

           <RelativeLayout
               android:background="#bebcbc"
               android:layout_width="match_parent"
               android:layout_height="1dp">
           </RelativeLayout>


           <LinearLayout
               android:padding="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/checkUpdate"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/checkUpdateImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/user_my_update"
                    />
                <TextView
                    android:textColor="#0a0909"
                    android:layout_marginLeft="10dp"
                    android:text="检查更新"
                    android:id="@+id/checkUpdateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#0a0909"
                        android:text="已是最新V2.0"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:id="@+id/checkUpdateVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>

           <RelativeLayout
               android:background="#bebcbc"
               android:layout_width="match_parent"
               android:layout_height="1dp">
           </RelativeLayout>


       </LinearLayout>

    </ScrollView>
</FrameLayout>
